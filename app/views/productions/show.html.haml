- content_for :head do
	= stylesheet_link_tag "productions"
.project-head
	= avatar(@production.creator)
	.project-title
		%h1.title= @production.title
		.clr
		%span.creator-info
			= "By:" 
			= link_to @production.creator.username , @production.creator
	.actions
		= link_to image_tag('icons/18px/smiley.png',:class => "icon follow")+"follow", "#", :class => "follow"
.clr

#main
	.project-left
		.label-left
			%h2 120
			%h2= @production.versions.length
			%h2= "XX"
		.label-right
			%h2
				%span.label
					BPM
			%h2
				%span.label
					versions
			%h2
				%span.label
					followers
	.project-main
		= render :partial => "production" 
.clr
:javascript
	$(function() {
		var actions = [];
		$('.player-target').each(function(i,v) {
			actions.push(function(callback) {
				var id = $(v).attr('id');
				$.ajax({
					url: "/scplayer/"+id,
					cache: false,
					success: function(html) {
						$(".player-target#"+id).html(html);
						callback();
					}
				});
			});
		});
		var sequencer = new Sequencer(actions);
		sequencer.start();
	});