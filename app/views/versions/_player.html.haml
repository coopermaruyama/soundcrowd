.jp-jplayer{:title => version.get_url, :id => "jquery-jplayer-#{version.id}"}
#jp_container_1.jp-audio
	.jp-type-single
		.jp-gui.jp-interface
			%ul.jp-controls
				%li
					%a.jp-play{:href => "javascript:;", :tabindex => "1"} play
				%li
					%a.jp-pause{:href => "javascript:;", :tabindex => "1"} pause
			.jp-progress
				.jp-seek-bar
					.jp-play-bar
			.jp-volume-bar
				.jp-volume-bar-value
			.jp-time-holder
				.jp-current-time
				.jp-duration
				%ul.jp-toggles
		.jp-title
			%ul
				%li 
					= link_to "Fork", "versions/#{version.id}/new"
		.jp-no-solution
			%span Update Required
			To play the media you will need to either update your browser to a recent version or update your
			%a{:href => "http://get.adobe.com/flashplayer/", :target => "_blank"} Flash plugin
	%script{:type => "text/javascript"}
		$(function() {
		window.createPlayer(version.id, version.audio_file);
		});