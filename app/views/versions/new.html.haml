.container.newVersion
	%h1 Upload Your Version
	%p
		You are about to fork 
		%span.em #{@parent.user.username}'s 
		version of #{@production.title} 
	/ %h3 Upload the your track in .als format below
	/ #source-target.dropZone
	/ 	%h2.drop-text Drop File Here

	%h3 Upload the bounced version of your track below
	#bounced-file-target.dropZone
		%h2.drop-text Drop File Here
	%form{:multipart => true,:class => "direct-upload"}
		%input{:type => "file", :id => "", :name => "track[asset_data]",:style => "display:none;"}
		%input{:type => "hidden", :value => current_user.token, :name => "oauth_token"}
		%input{:type => "hidden", :value => "test", :name => "track[title]"}
	.progress-container
	= form_for @version, :html => {:multipart => true, :id => "new_version",:class => ""} do |f|
		= f.hidden_field :audio_file, :id => "real_audio_file"
		= f.hidden_field :user_id
		= f.hidden_field :production_id
		= f.hidden_field :parent_id
		= f.label :title
		= f.text_field :title
		= f.submit
		%script#template-upload{:type => "text/x-tmpl"}
			.upload.ui-progress-bar
				.bar.ui-progress{:style => "width: 0%"}
					%span
						{%=o.name%}
= javascript_include_tag "//connect.soundcloud.com/sdk.js"
